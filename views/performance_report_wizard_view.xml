<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="it_performance_report_wizard_view_form" model="ir.ui.view">
        <field name="name">it.performance.report.wizard.form</field>
        <field name="model">it.performance.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Performance Report">
                <group shadow="1">
                    <group>
                        <field name="date_from" />
                    </group>
                    <group>
                        <field name="date_to" />
                    </group>
                </group>
                <footer>
                    <button name="action_print_report" string="Generate Report" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_it_performance_report_wizard" model="ir.actions.act_window">
        <field name="name">IT Support Performance Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">it.performance.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> </record>

    <menuitem id="menu_it_performance_report"
              name="Performance Report"
              parent="it_ticket.menu_it_root" 
              action="action_it_performance_report_wizard"
              sequence="100"/>
</odoo>