<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_it_ticket_list" model="ir.ui.view">
        <field name="name">it.ticket.list</field>
        <field name="model">it.ticket</field> <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" 
                  decoration-warning="state == 'in_progress'" 
                  decoration-success="state in ('resolved', 'closed')" 
                  decoration-muted="state == 'cancelled'">
                <field name="create_date"/>  
                <field name="name"/>
                <field name="ticket_type"/>
                <field name="created_by"/>
                <field name="assigned_to"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'assigned'" 
                       decoration-success="state == 'closed'" 
                       decoration-warning="state == 'in_progress'"/>

                <field name="satisfaction_rate" widget="priority" optional="show" readonly="1"/>

            </list>
        </field>
    </record>

   <record id="view_it_ticket_form" model="ir.ui.view">
    <field name="name">it.ticket.form</field>
    <field name="model">it.ticket</field>
    <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_assign" string="Assign to Me" type="object"
                        class="oe_highlight"
                        invisible="state != 'draft'"
                        groups="it_ticket.group_it_ticket_support"/>

                <button name="action_progress" string="Start Work" type="object"
                        class="oe_highlight"
                        invisible="state != 'assigned'"
                        groups="it_ticket.group_it_ticket_support"
                        />

                <button name="action_resolve" string="Mark Resolved" type="object"
                        invisible="state != 'in_progress'"/>

                <button name="action_close" string="Close &amp; Rate" type="object"
                        class="oe_highlight"
                        invisible="state != 'resolved'"/>

                <button name="action_cancel" string="Cancel" type="object"
                        invisible="state in ('closed', 'cancelled')"/>

                <field name="state" widget="statusbar"
                       statusbar_visible="draft,assigned,in_progress,resolved,closed"/>
            </header>
            <sheet>
            <field name="is_editable" invisible="1"/>
                <div class="oe_title">
                    <label for="name" string="Ticket Subject"/>
                    <h1>
                        <field name="name" placeholder="e.g. Cannot access email..." readonly="not is_editable"/>
                    </h1>
                </div>
                <group>
                    <group string="Ticket Details">
                        <field name="ticket_type" widget="radio"
                               options="{'horizontal': true}" readonly="not is_editable"/>
                        <field name="created_by" readonly="1"/>
                    </group>
                    <group string="Assignment &amp; Feedback">
                        <field name="assigned_to" readonly="1"/>

                        <field name="satisfaction_rate" widget="priority"
                               invisible="state not in ('resolved', 'closed')"
                               readonly="is_rated or not is_creator"
                        />

                    </group>
                </group>
                <notebook>
                    <page string="Description" name="description">
                        <field name="description"
                               placeholder="Provide details about your request..." readonly="not is_editable"/>
                    </page>
                </notebook>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>

    <record id="view_it_ticket_search" model="ir.ui.view">
        <field name="name">it.ticket.search</field>
        <field name="model">it.ticket</field>
        <field name="arch" type="xml">
           <search>
                    <field name="name"/>
                    <field name="assigned_to"/>
                    <field name="created_by"/>

            </search>
        </field>
    </record>

    <record id="action_it_ticket" model="ir.actions.act_window">
        <field name="name">IT Support Tickets</field>
        <field name="res_model">it.ticket</field>
        <field name="view_mode">list,form,kanban,graph,pivot</field>
        <field name="search_view_id" ref="view_it_ticket_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first IT request!</p>
        </field>
    </record>

    <menuitem id="menu_it_root" name="IT Tickets" sequence="10"/>
    <menuitem id="menu_it_ticket" name="Tickets" parent="menu_it_root" action="action_it_ticket" sequence="10"/>
</odoo>