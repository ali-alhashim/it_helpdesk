<odoo>
    <data noupdate="1">

        <!-- Regular users only see their own tickets -->
        <record id="it_ticket_rule_user" model="ir.rule">
            <field name="name">IT Ticket: User sees own tickets only</field>
            <field name="model_id" ref="model_it_ticket"/>
            <field name="domain_force">[('created_by', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- IT Support group sees ALL tickets (no domain restriction) -->
        <record id="it_ticket_rule_support" model="ir.rule">
            <field name="name">IT Ticket: IT Support sees all tickets</field>
            <field name="model_id" ref="model_it_ticket"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_it_ticket_support'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>